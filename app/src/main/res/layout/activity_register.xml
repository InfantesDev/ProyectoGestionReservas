<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_imageappregisterlogin_foreground">
    <ScrollView
        android:id="@+id/scrollViewLRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/textTitleRegister1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textColor="@color/white"
                    android:text="Hotel " />
                <TextView
                    android:id="@+id/textTitleRegister2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textColor="#00FF00"
                    android:textStyle="bold"
                    android:text="Rural" />
            </LinearLayout>

            <TextView
                android:id="@+id/textDescRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="Hotel Rural es una de las mejores apps para hacer reservas" />

            <EditText
                android:id="@+id/editUserRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Usuario"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/editApellidoRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Apellido"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/editDniRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="DNI"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/editTelefonoRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Telefono"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/editPasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/editPasswordAgainRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Repetir Contraseña"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <Button
                android:id="@+id/btnRegister"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/btn_verde"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="Registro" />

            <TextView
                android:id="@+id/btnRegistroToLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="¿Estas registrado?\nIr al Login" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>