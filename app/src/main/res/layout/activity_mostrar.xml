<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarActivity">

    <ImageView
        android:id="@+id/header_foto"
        android:layout_width="412dp"
        android:layout_height="291dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/androidhabitacion1"/>

    <ScrollView
        android:id="@+id/mostrar_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_foto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mostrar_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                android:text="Habitacion Pequeña 1"
                android:textSize="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingMostrar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/white"
                    android:rating="4.5"
                    android:stepSize="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/numBanyoHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-black"
                    android:text="1 "
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/banyoHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Baños"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/numCamaHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="sans-serif-black"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/camaHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="sans-serif-black"
                    android:text=" Camas"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sobreHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-black"
                android:text="Sobre La Habitacion"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/contenidoHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:alpha="0.5"
                android:text="La habitacion cuenta con una cama grande
y con un baño, tiene una pequeña mesita. La habitacion da vistas al valle,
donde se puede ver montañas."
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/masHabitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-black"
                android:text="Sobre el hotel"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/mas1Habitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif-black"
                android:text="Restaurante"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/mas2Habitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif-black"
                android:text="Entorno Rural"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/mas3Habitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif-black"
                android:text="Piscina y Sala de Spa"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/mas4Habitacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif-black"
                android:text="Apto para niños"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/textDescReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:text="Si quiere hacer una reserva tendra que dar la fecha inicial y
la de salida y darle al boton Realizar Reserva, tambien puede escribir una
observacion."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="17sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/editDateEntrada"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Fecha Entrada"/>
                    <EditText
                        android:id="@+id/editDateSalida"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Fecha Salida"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/textDescHabi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Observaciones"
                    android:textColor="#999999"
                    android:textSize="17sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnRealizarReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_blanco"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="10dp"
                android:text="Realizar Reserva"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/btnAbrirMapaHabi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_blanco"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="40dp"
                android:text="Localizacion HotelRural"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/btnRealizarLlamadasHabi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_blanco"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="Realizar Llamada"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>